#!/usr/bin/env python
# vim:fileencoding=utf-8

from calibre.web.feeds.news import BasicNewsRecipe

class MyCustomRecipe(BasicNewsRecipe):
    title = '我的自定义新闻'
    description = '从自定义 RSS 源获取新闻'
    language = 'zh'
    
    # 设置最多获取的文章数量
    max_articles_per_feed = 20
    
    # 保留文章的时间范围（天）
    oldest_article = 2
    
    # 你的 RSS 订阅地址
    feeds = [
        ('新浪新闻', 'http://rss.sina.com.cn/news/marquee/ddt.xml'),
        ('网易新闻', 'http://news.163.com/special/00011K6L/rss_newsattitude.xml'),
        ('腾讯新闻', 'http://news.qq.com/newsgn/rss_newsgn.xml'),
    ]
    
    # 可选：设置封面
    cover_url = 'https://example.com/cover.jpg'
    
    # 可选：清理不需要的 HTML 元素
    remove_tags = [
        dict(name='div', class_='advertisement'),
        dict(name='script'),
        dict(name='style'),
    ]
